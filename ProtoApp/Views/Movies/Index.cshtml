@model IEnumerable<ProtoApp.Models.Movie>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View</h2>

<p>
    
        @Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary" })
    
   
</p>
<table id="movies" class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            Movie
        </th>
        <th>
           Genre
        </th>
       <th>
           Delete
       </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.Name)*@
            @Html.ActionLink(item.Name, "Edit", "Movies", new { id = item.Id }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </td>
        
        <td>
           <button data-movie-id="@item.Id" class="btn-link js-delete">Delete</button>
        </td>
    </tr>
}

</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#movies .js-delete").on("click", function () {
                var button = $(this);
                //Bootbox confirm function is not a boolean value instead takes a function call
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result)
                    {
                        $.ajax(
                            {
                                url: "/api/movies/" + button.attr("data-movie-id"),
                                method: "DELETE",
                                success: function () {
                                    button.parents("tr").remove();
                                }
                            });
                    }
                });
            });
        });
    </script>
    }
